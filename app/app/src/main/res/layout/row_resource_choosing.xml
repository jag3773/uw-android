<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="#fff"
    >

    <ImageView
        android:src="@drawable/audio_active"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/row_resource_choosing_icon"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:textColor="#000"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:minWidth="100dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/row_resource_choosing_title"
        android:textColor="#000"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toRightOf="@+id/row_resource_choosing_icon"
        android:layout_toEndOf="@+id/row_resource_choosing_icon"
        android:layout_toLeftOf="@+id/row_resource_choosing_check_mark"
        android:layout_toStartOf="@+id/row_resource_choosing_check_mark"
        />

    <ImageView
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/row_resource_choosing_check_mark"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:textColor="#000"
        android:layout_centerVertical="true"
        android:src="@drawable/checkbox"
        />

</RelativeLayout>