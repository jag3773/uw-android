<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_alignParentBottom="true"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:background="@color/primary"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/toolbar_right_button_layout"
        android:weightSum="1">

        <ImageButton
            android:background="@drawable/basic_button_selector"
            android:layout_gravity="center_vertical"
            android:id="@+id/tab_bar_button_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_weight="0.2"
            />

        <ImageButton
            android:background="@drawable/basic_button_selector"
            android:layout_gravity="center_vertical"
            android:id="@+id/tab_bar_button_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_weight="0.2"
            />

        <ImageButton
            android:background="@drawable/basic_button_selector"
            android:layout_gravity="center_vertical"
            android:id="@+id/tab_bar_button_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_weight="0.2"
            />

        <ImageButton
            android:background="@drawable/basic_button_selector"
            android:layout_gravity="center_vertical"
            android:id="@+id/tab_bar_button_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_weight="0.2"
            />

        <ImageButton
            android:background="@drawable/basic_button_selector"
            android:layout_gravity="center_vertical"
            android:id="@+id/tab_bar_button_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_weight="0.2"
            />


    </LinearLayout>

</RelativeLayout>