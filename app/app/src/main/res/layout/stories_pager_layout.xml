<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darky_brown">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <view.ASyncImageView
            android:id="@+id/chapter_image_view"
            android:scaleType="fitStart"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/story_main_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="New Text"
                android:textColor="@color/off_white"
                android:textSize="@dimen/story_reading_text_size"
                android:textStyle="normal"
                android:background="@color/clear_black"
                android:layout_weight="1"
                />

            <TextView
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:id="@+id/story_secondary_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="New Text"
                android:textColor="@color/off_white"
                android:textSize="@dimen/story_reading_text_size"
                android:textStyle="normal"
                android:background="@color/clear_black"
                android:layout_weight="1"
                />
        </LinearLayout>

    </FrameLayout>
</RelativeLayout>