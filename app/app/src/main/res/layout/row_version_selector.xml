<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/rows"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/clickableRow"
                android:layout_width="match_parent"
                android:layout_height="@dimen/version_selection_row_height"
                android:background="@drawable/layout_button_click"
                android:focusable="false"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/languageTypeImageView"
                    android:layout_width="@dimen/version_selection_image_size"
                    android:layout_height="@dimen/version_selection_image_size"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:cropToPadding="true"
                    android:scaleType="center"
                    android:src="@color/white" />

                <Button
                    android:id="@+id/status"
                    android:text="@string/unknown_button_char"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/verification_button_text_size"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/green_checkmark"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/languageNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:focusable="true"
                    android:singleLine="true"
                    android:text="New Text"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/general_row_text_size"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:layout_marginRight="50dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="right|center"
                >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/download_status_frame"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/layout_button_click"
                    android:layout_gravity="right|center">

                    <ProgressBar
                        android:id="@+id/download_progress_bar"
                        style="@style/ProgressBar.Spinner.Indeterminate.Small"
                        android:layout_width="@dimen/version_selection_button_size"
                        android:layout_height="@dimen/version_selection_button_size"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:max="200"
                        android:visibility="invisible"
                        />
                    <ImageView
                        android:id="@+id/download_status_image"
                        android:layout_width="@dimen/version_selection_button_size"
                        android:layout_height="@dimen/version_selection_button_size"
                        android:layout_marginRight="15dp"
                        android:layout_gravity="right|center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/download_button"
                        android:layout_marginLeft="15dp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/info_image_frame"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/layout_button_click"
                    android:layout_gravity="right|center">

                    <ImageView
                        android:id="@+id/version_info_image"
                        android:layout_width="@dimen/version_selection_button_size"
                        android:layout_height="@dimen/version_selection_button_size"
                        android:layout_marginRight="15dp"
                        android:layout_gravity="right|center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/info_icon"
                        android:layout_marginLeft="15dp" />
                </FrameLayout>

            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/visibleLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"

            android:visibility="gone">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/verification_title"
                        android:textColor="@color/black_light"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/verification_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:singleLine="false"
                        android:text="New Text"
                        android:textColor="@color/black_light" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/checking_entity_constant_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/checking_entity"
                        android:textColor="@color/black_light"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/checkingEntitytextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:singleLine="false"
                        android:text="New Text"
                        android:textColor="@color/black_light" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/checkingLevelConstanttextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/checking_level"
                        android:textColor="@color/black_light"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/checkingLevelTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"

                        android:layout_marginTop="15dp"
                        android:singleLine="true"
                        android:text="New Text"
                        android:textColor="@color/black_light" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/versionConstanttextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/version"
                        android:textColor="@color/black_light"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/versionTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:singleLine="true"

                        android:text="New Text"
                        android:textColor="@color/black_light" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/publishDateConstanttextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/publish_date"
                        android:textColor="@color/black_light"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/publishDateTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"

                        android:layout_marginTop="15dp"
                        android:singleLine="true"
                        android:text="New Text"
                        android:textColor="@color/black_light" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

</RelativeLayout>