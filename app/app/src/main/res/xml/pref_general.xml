<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <EditTextPreference
        android:key="base_url"
        android:title="@string/pref_base_url"
        android:defaultValue="@string/pref_default_base_url"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <Preference android:title="@string/reset_base_url"
        android:key="reset_url"/>

    <Preference
        android:key="selected_bible_version_id"
        android:defaultValue="-1"/>

    <Preference
        android:key="selected_story_version_id"
        android:defaultValue="-1"/>

    <Preference
        android:key="selected_bible_chapter_id"
        android:defaultValue="-1"/>

    <Preference
        android:key="selected_story_chapter_id"
        android:defaultValue="-1"/>

    <Preference
        android:key="last_updated_date"
        android:defaultValue="-1"/>

</PreferenceScreen>
