<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <EditTextPreference
        android:key="base_url"
        android:title="@string/pref_base_url"
        android:defaultValue="@string/pref_default_base_url"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <Preference android:title="@string/reset_base_url"
        android:key="reset_url"/>

    <Preference android:title="@string/reset_to_preload_text"
        android:key="reset_preload"/>

    <Preference android:title="@string/application_version"
        android:key="app_version"/>;

    <Preference android:title="@string/application_build_number"
        android:key="app_build"/>;


</PreferenceScreen>
