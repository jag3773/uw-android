<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <ImageView
        android:id="@+id/chapter_image_view"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/test_image"
        android:adjustViewBounds="true"
        />
    <FrameLayout
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:background="#0000"
        android:layout_centerInParent="true"
        android:id="@+id/center_place_holder"/>

    <LinearLayout
        android:layout_below="@+id/center_place_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_gravity="bottom">

            <ScrollView
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <TextView
                    android:layout_gravity="bottom"
                    android:text="test"
                    android:id="@+id/story_secondary_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/off_white"
                    android:textSize="@dimen/story_reading_text_size"
                    android:textStyle="normal"
                    android:background="@color/clear_black"
                    />
            </ScrollView>

            <FrameLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#0000"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_gravity="bottom">

        <FrameLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#0000"/>

            <ScrollView
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <TextView
                    android:layout_gravity="bottom"
                    android:text="test"
                    android:id="@+id/story_main_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/off_white"
                    android:textSize="@dimen/story_reading_text_size"
                    android:textStyle="normal"
                    android:background="@color/clear_black"
                    />

            </ScrollView>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/middle_separator"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#0000"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/chapter_image_view"
        android:visibility="gone"/>
</RelativeLayout>